@model IEnumerable<Repository.Models.Post>
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Index";
    ViewBag.Description = "List of posts";
    ViewBag.Keywords = "List, Blog, post, commennts";
}

<h2>Posts list</h2>
@if (User.Identity.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New ", "Create", null, new { @class = "btn btn-primary" })
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.Name("Guid Usera")
            @*@Html.DisplayNameFor(model=>model.IdUsera == User.Identity.Name)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostingDate)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
              @*@Html.Name(User.Identity.GetUserName())*@
                @Html.DisplayFor(modelItem => item.IdUsera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostingDate)
            </td>

            <td>

                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })
                @if (User.Identity.IsAuthenticated)
                {
                    <br />
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    <br />
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })

                }

            </td>
        </tr>
    }

</table>
